<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_hospital_disease_category_tree" model="ir.ui.view">
        <field name="name">hr.hospital.disease.category.tree (hr.hospital)</field>
        <field name="model">hr.hospital.disease.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="complete_name" />
                <field name="disease_count" />
            </tree>
        </field>
    </record>

    <record id="hr_hospital_disease_category_form" model="ir.ui.view">
        <field name="name">hr.hospital.disease.category.form ()</field>
        <field name="model">hr.hospital.disease.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" string="Disease Categories"/>
                        <field name="parent_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_disease_category_act_window" model="ir.actions.act_window">
        <field name="name">Category Disease</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.disease.category</field>
        <field name="view_mode">tree,form</field>   
    </record>

    <menuitem
    id="hr_hospital_disease_category_menu"
    action="hr_hospital_disease_category_act_window"
    parent="hr_hospital_catalog_menu"
    name="Disease Category"
    sequence="700"/> 

</odoo>
